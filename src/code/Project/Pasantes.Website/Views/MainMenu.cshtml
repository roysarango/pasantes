@model Pasantes.Website.Models.MainMenuContainer

@if (Model == null || Model.MenuOptions == null || !Model.MenuOptions.Any())
{
    <h3>No data source found!</h3>
}
else
{
    <nav class="navbar navbar-expand-lg n navbar-light bg-light">
        <a class="navbar-brand" href="/">Sitecore Learning</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @foreach (var menuOption in Model.MenuOptions)
                {
                    if (menuOption.Link != null)
                    {
                        <li class="nav-item">
                            <a href="@menuOption.Link.Url" class="nav-link">@menuOption.Title</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>
}