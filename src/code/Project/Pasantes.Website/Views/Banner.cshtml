@model Pasantes.Website.Models.Banner

@if (Model == null)
{
    <h3>No data source found!</h3>
}
else
{
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    @if (Model.Image != null)
                    {
                        <img class="img-fluid" src="@Model.Image.Src" alt="">
                        <div class="text-over-img">
                            <h1>@Model.Title</h1>
                            <p>@Model.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}